{
  "name": "@jihchi/vite-plugin-rescript",
  "author": "jihchi",
  "homepage": "https://github.com/jihchi/vite-plugin-rescript",
  "repository": {
    "type": "git",
    "url": "https://github.com/jihchi/vite-plugin-rescript.git"
  },
  "version": "1.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/vite-plugin-rescript.esm.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "rollup-plugin",
    "vite-plugin",
    "ReScript",
    "ReasonML",
    "BuckleScript"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/vite-plugin-rescript.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/vite-plugin-rescript.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "chalk": "^4.1.1",
    "execa": "^5.1.1",
    "npm-run-path": "^4.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.2",
    "@types/debug": "^4.1.7",
    "husky": "^7.0.1",
    "size-limit": "^5.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.4"
  },
  "peerDependencies": {
    "rescript": "^9.1.3",
    "vite": "^2.4.4"
  }
}
